<config>
    <modules>
        <Symmetrics_TrustedRating>
            <version>0.2.6</version>
        </Symmetrics_TrustedRating>
    </modules>
    <global>
        <helpers>
            <trustedrating>
                <class>Symmetrics_TrustedRating_Helper</class>
            </trustedrating>
        </helpers>
        <blocks>
            <trustedrating>
                <class>Symmetrics_TrustedRating_Block</class>
            </trustedrating>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <trustedrating>
                    <file>trustedrating.xml</file>
                </trustedrating>
            </updates>
        </layout>
        <translate>
            <modules>
                <Symmetrics_TrustedRating>
                    <files>
                        <trustedrating>Symmetrics_TrustedRating.csv</trustedrating>
                    </files>
                </Symmetrics_TrustedRating>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Symmetrics_TrustedRating>
                    <files>
                        <trustedrating>Symmetrics_TrustedRating.csv</trustedrating>
                    </files>
                </Symmetrics_TrustedRating>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <trustedrating>
            <trustbadge_generation_url><![CDATA[https://www.trustedshops.com/integration/?shop_id=SHOP_ID&backend_language=LANG&shopsw=SHOP_SOFTWARE&shopsw_version=SHOP_VERSION&plugin_version=PLUGIN_VERSION&context=trustbadge]]></trustbadge_generation_url>
        </trustedrating>
    </default>
</config>
