<config>
    <sections>
        <trustedrating translate="label" module="trustedrating">
            <label>Trusted Shops</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <info translate="label">
                    <label>Info</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>trustedrating/adminhtml_system_config_info</frontend_model>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                </info>
                <data translate="label">
                    <label><![CDATA[Trustbadge, Review Sticker]]></label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>trustedrating/adminhtml_system_config_trustbadge</frontend_model>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <trustedrating_id translate="label">
                            <label><![CDATA[Trusted Shops ID <font color="red">*</font>]]></label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </trustedrating_id>
                        <trustbadge_code_snippet translate="label">
                            <label><![CDATA[Trustbadge Code Snippet]]></label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <config_path>trustedrating/trustbadge/code_snippet</config_path>
                        </trustbadge_code_snippet>
                        <review_sticker_code_snippet translate="label">
                            <label><![CDATA[Review Sticker Code Snippet]]></label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <config_path>trustedrating/review_sticker/code_snippet</config_path>
                        </review_sticker_code_snippet>
                    </fields>
                </data>
            </groups>
        </trustedrating>
    </sections>
</config>
